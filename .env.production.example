# Exemple de configuration pour la production avec Dokploy
# Copiez ce fichier en .env.production et remplissez les valeurs

# MongoDB
MONGODB_URI=mongodb://username:password@mongodb:27017/ezia-prod?authSource=admin

# URLs de l'application
NEXTAUTH_URL=https://votredomaine.com
NEXT_PUBLIC_APP_URL=https://votredomaine.com

# Domaine principal (pour les sous-domaines)
PRIMARY_DOMAIN=votredomaine.com

# API externe DeepSite (si utilisée)
NEXT_APP_API_URL=https://api-inference.huggingface.co

# Tokens Hugging Face
HF_TOKEN=hf_xxxxxxxxxxxx
DEFAULT_HF_TOKEN=hf_xxxxxxxxxxxx

# Configuration des cookies
AUTH_COOKIE_NAME=ezia-auth-token
AUTH_COOKIE_DOMAIN=.votredomaine.com

# Désactiver les fonctionnalités (optionnel)
DISABLE_ECOSYSTEM_FEATURE=true
NEXT_PUBLIC_DISABLE_ECOSYSTEM_FEATURE=true

# Mode production
NODE_ENV=production

# Port (généralement géré par Dokploy)
PORT=3000