{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Block Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique block identifier"
    },
    "type": {
      "type": "string",
      "description": "Block type category"
    },
    "component": {
      "type": "string",
      "description": "Component name for rendering"
    },
    "props": {
      "type": "object",
      "description": "Component properties"
    },
    "spec": {
      "$ref": "#/definitions/ComponentSpec",
      "description": "Custom component specification"
    }
  },
  "required": ["id", "type", "component", "props"],
  "additionalProperties": false,
  "definitions": {
    "ComponentSpec": {
      "type": "object",
      "properties": {
        "inputs": {
          "type": "object",
          "description": "Input schema for the component"
        },
        "css": {
          "type": "string",
          "description": "CSS styles for the component"
        },
        "template": {
          "type": "string",
          "description": "HTML template with moustache syntax"
        }
      },
      "required": ["inputs", "css", "template"],
      "additionalProperties": false
    }
  }
}
