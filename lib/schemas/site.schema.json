{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Site Generation Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique site identifier"
    },
    "title": {
      "type": "string",
      "description": "Site title"
    },
    "description": {
      "type": "string",
      "description": "Site description for SEO"
    },
    "locale": {
      "type": "string",
      "default": "fr",
      "description": "Site locale"
    },
    "domain": {
      "type": "string",
      "description": "Custom domain"
    },
    "theme": {
      "$ref": "#/definitions/Theme"
    },
    "pages": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Page"
      }
    },
    "navigation": {
      "$ref": "#/definitions/Navigation"
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Asset"
      }
    }
  },
  "required": ["id", "title", "description", "theme", "pages", "navigation"],
  "additionalProperties": false,
  "definitions": {
    "Page": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "meta": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "keywords": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "blocks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Block"
          }
        }
      },
      "required": ["id", "title", "slug", "blocks"],
      "additionalProperties": false
    },
    "Block": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "component": {
          "type": "string"
        },
        "props": {
          "type": "object"
        },
        "spec": {
          "$ref": "#/definitions/ComponentSpec"
        }
      },
      "required": ["id", "type", "component", "props"],
      "additionalProperties": false
    },
    "ComponentSpec": {
      "type": "object",
      "properties": {
        "inputs": {
          "type": "object"
        },
        "css": {
          "type": "string"
        },
        "template": {
          "type": "string"
        }
      },
      "required": ["inputs", "css", "template"],
      "additionalProperties": false
    },
    "Navigation": {
      "type": "object",
      "properties": {
        "header": {
          "$ref": "#/definitions/NavigationSection"
        },
        "footer": {
          "$ref": "#/definitions/NavigationSection"
        }
      },
      "required": ["header", "footer"],
      "additionalProperties": false
    },
    "NavigationSection": {
      "type": "object",
      "properties": {
        "logo": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "href": {
                "type": "string"
              }
            },
            "required": ["label", "href"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "Asset": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["image", "icon", "video"]
        },
        "url": {
          "type": "string"
        },
        "alt": {
          "type": "string"
        }
      },
      "required": ["id", "type", "url"],
      "additionalProperties": false
    },
    "Theme": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "tokens": {
          "type": "object",
          "properties": {
            "colors": {
              "type": "object",
              "properties": {
                "primary": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "secondary": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "accent": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "background": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "surface": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "text": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "textSecondary": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "border": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "error": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "success": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "warning": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "info": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                }
              },
              "required": ["primary", "secondary", "accent", "background", "surface", "text", "textSecondary", "border"],
              "additionalProperties": false
            },
            "typography": {
              "type": "object",
              "properties": {
                "fontFamily": {
                  "type": "object",
                  "properties": {
                    "heading": {
                      "type": "string"
                    },
                    "body": {
                      "type": "string"
                    },
                    "mono": {
                      "type": "string"
                    }
                  },
                  "required": ["heading", "body", "mono"],
                  "additionalProperties": false
                },
                "fontSize": {
                  "type": "object",
                  "properties": {
                    "xs": {
                      "type": "string"
                    },
                    "sm": {
                      "type": "string"
                    },
                    "base": {
                      "type": "string"
                    },
                    "lg": {
                      "type": "string"
                    },
                    "xl": {
                      "type": "string"
                    },
                    "2xl": {
                      "type": "string"
                    },
                    "3xl": {
                      "type": "string"
                    },
                    "4xl": {
                      "type": "string"
                    }
                  },
                  "required": ["xs", "sm", "base", "lg", "xl", "2xl", "3xl", "4xl"],
                  "additionalProperties": false
                },
                "fontWeight": {
                  "type": "object",
                  "properties": {
                    "light": {
                      "type": "number"
                    },
                    "normal": {
                      "type": "number"
                    },
                    "medium": {
                      "type": "number"
                    },
                    "semibold": {
                      "type": "number"
                    },
                    "bold": {
                      "type": "number"
                    }
                  },
                  "required": ["light", "normal", "medium", "semibold", "bold"],
                  "additionalProperties": false
                },
                "lineHeight": {
                  "type": "object",
                  "properties": {
                    "tight": {
                      "type": "string"
                    },
                    "normal": {
                      "type": "string"
                    },
                    "relaxed": {
                      "type": "string"
                    }
                  },
                  "required": ["tight", "normal", "relaxed"],
                  "additionalProperties": false
                }
              },
              "required": ["fontFamily", "fontSize", "fontWeight", "lineHeight"],
              "additionalProperties": false
            },
            "spacing": {
              "type": "object",
              "properties": {
                "px": {
                  "type": "string"
                },
                "xs": {
                  "type": "string"
                },
                "sm": {
                  "type": "string"
                },
                "md": {
                  "type": "string"
                },
                "lg": {
                  "type": "string"
                },
                "xl": {
                  "type": "string"
                },
                "2xl": {
                  "type": "string"
                },
                "3xl": {
                  "type": "string"
                },
                "4xl": {
                  "type": "string"
                }
              },
              "required": ["px", "xs", "sm", "md", "lg", "xl", "2xl", "3xl", "4xl"],
              "additionalProperties": false
            },
            "borderRadius": {
              "type": "object",
              "properties": {
                "none": {
                  "type": "string"
                },
                "sm": {
                  "type": "string"
                },
                "md": {
                  "type": "string"
                },
                "lg": {
                  "type": "string"
                },
                "full": {
                  "type": "string"
                }
              },
              "required": ["none", "sm", "md", "lg", "full"],
              "additionalProperties": false
            },
            "shadows": {
              "type": "object",
              "properties": {
                "sm": {
                  "type": "string"
                },
                "md": {
                  "type": "string"
                },
                "lg": {
                  "type": "string"
                },
                "xl": {
                  "type": "string"
                }
              },
              "required": ["sm", "md", "lg", "xl"],
              "additionalProperties": false
            }
          },
          "required": ["colors", "typography", "spacing", "borderRadius", "shadows"],
          "additionalProperties": false
        }
      },
      "required": ["name", "tokens"],
      "additionalProperties": false
    }
  }
}
