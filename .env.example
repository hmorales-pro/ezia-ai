# MongoDB Configuration
# Pour MongoDB local : mongodb://localhost:27017/ezia  
# Pour MongoDB Atlas : mongodb+srv://username:password@cluster.mongodb.net/ezia
MONGODB_URI=your-mongodb-uri

# HuggingFace Token (requis pour l'IA DeepSite)
# Obtenez votre token sur https://huggingface.co/settings/tokens
HF_TOKEN=your-hf-token
DEFAULT_HF_TOKEN=your-default-hf-token

# Mistral AI API Key for business analysis
# Get your key at: https://console.mistral.ai/
MISTRAL_API_KEY=your-mistral-key

# Secrets pour l'authentification
JWT_SECRET=your-jwt-secret
NEXTAUTH_SECRET=your-nextauth-secret

# URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_APP_API_URL=http://localhost:3000

# Google Analytics
# Créez un compte sur https://analytics.google.com
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Brevo (ex SendinBlue) pour l'envoi d'emails
# Créez un compte sur https://www.brevo.com
BREVO_API_KEY=

# Listes Brevo séparées pour Startup et Enterprise
# Créez deux listes dans Brevo et copiez leurs IDs ici
BREVO_LIST_ID_STARTUP=
BREVO_LIST_ID_ENTERPRISE=

# Templates d'email Brevo (créez-les dans Brevo)
BREVO_TEMPLATE_WAITLIST_STARTUP=1
BREVO_TEMPLATE_WAITLIST_ENTERPRISE=2

# Email de l'expéditeur (doit être vérifié dans Brevo)
BREVO_SENDER_EMAIL=noreply@ezia.ai

# Email de notification admin
# Recevez un email à chaque nouvelle inscription
ADMIN_NOTIFICATION_EMAIL=hugo.morales.pro+waitlist@gmail.com

# OAuth HuggingFace (optionnel)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Feature Flags
DISABLE_ECOSYSTEM_FEATURE=true
NEXT_PUBLIC_DISABLE_ECOSYSTEM_FEATURE=true